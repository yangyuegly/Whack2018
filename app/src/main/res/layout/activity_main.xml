<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="33"
        android:orientation="vertical"
        android:columnCount="2">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />

        <Button
            android:id="@+id/begin_button"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="goodBye"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/imageView1"
            android:layout_margin="25dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/hoop" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/imageView20"
            android:layout_margin="25dp"
            android:layout_row="0"
            android:layout_column="0"
                    android:src="@drawable/kind" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="201dp"
            android:id="@+id/imageView2"
            android:layout_margin="25dp"
            android:layout_row="1"
            android:layout_column="1"
                    android:src="@drawable/alwaysbekind" />


            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:id="@+id/imageView3"
                android:layout_margin="25dp"
                android:layout_row="3"
                android:layout_column="1"
                android:src="@drawable/hellosunshine" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:id="@+id/imageView4"
                android:layout_margin="25dp"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/schoolistough" />



                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView5"
                    android:layout_margin="25dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:src="@drawable/youarestronger" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView6"
                    android:layout_margin="25dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:src="@drawable/youcandoit" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView7"
                    android:layout_margin="25dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:src="@drawable/lovely" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView8"
                    android:layout_margin="25dp"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:src="@drawable/stopworrying" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/imageView9"
                    android:layout_margin="25dp"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:src="@drawable/provethemwrong" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="25dp"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:src="@drawable/staypositive" />
                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="25dp"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:src="@drawable/italawaysseemsimpossible" />


        </GridLayout>



</ScrollView>


